{
  "cargo": {
    "features": "all",
    "runBuildScripts": true,
    "buildScripts": {
      "enable": true
    }
  },
  "rustfmt": {
    "extraArgs": ["--color=always"]
  },
  "typing": {
    "autoClosingAngleBrackets": true
  },
  "numThreads": 8,
  "cachePriming": {
    "enable": true,
    "numThreads": 4
  },
  "diagnostics": {
    "enable": true
  },
  "checkOnSave": true,
  "check": {
    "allTargets": false,
    "command": "clippy",
    "extraArgs": ["--no-deps", "--tests"],
    "workspace": false
  },
  "server": {
    "extraEnv": {
      "RA_LOG": null,
      "RUST_BACKTRACE": null
    }
  },
  "procMacro": {
    "enable": true,
    "ignored": {
      "async-trait": ["async_trait"],
      "napi-derive": ["napi"],
      "async-recursion": ["async_recursion"]
    }
  }
}
